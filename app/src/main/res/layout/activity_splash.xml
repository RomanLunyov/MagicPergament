<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/magic_portal_background">


    <TextView
        android:id="@+id/invitationText"
        android:layout_width="451dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/greatvibes"
        android:gravity="center"
        android:maxLines="2"
        android:padding="16dp"
        android:shadowColor="#FFA500"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Коснись свитка на столе, чтобы получить ответы"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

</androidx.constraintlayout.widget.ConstraintLayout>
